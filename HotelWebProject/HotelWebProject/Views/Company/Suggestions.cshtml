<div class="contentDiv">
    <form action="/Company/SubmitSuggestion" method="post">
        <div class="cdiv">
            <div class="item">
                <div class="itemtitle">
                    <span>*</span>客户姓名：
                </div>
                <div class="itemcontent">
                    <input class="txt" id="CustomerName" name="CustomerName" type="text" value="" />
                </div>
            </div>
            <div class="item">
                <div class="itemtitle">
                    <span>*</span>您的消费情况：
                </div>
                <div class="itemcontent">
                    <input class="txt" id="ConsumeDesc" name="ConsumeDesc" type="text" value="" />
                </div>
            </div>
            <div class="item">
                <div class="itemtitle">
                    <span>*</span> 联系电话：
                </div>
                <div class="itemcontent">
                    <input class="txt" id="PhoneNumber" name="PhoneNumber" type="text" value="" />
                </div>
            </div>

            <div class="item">
                <div class="itemtitle">
                    <span>*</span>电子邮件：
                </div>
                <div class="itemcontent">
                    <input class="txt" id="Email" name="Email" type="text" value="" />
                </div>
            </div>
            <div class="item">
                <div class="itemtitle">
                    <span>*</span> 投诉建议：
                </div>
                <div class="itemcontent">
                    <textarea class="txt" cols="20" id="SuggestionDesc" name="SuggestionDesc" rows="2"></textarea>
                </div>
            </div>
            <div class="item">
                <div class="itemtitle">
                    <span>*</span>   验证码：
                </div>
                <div class="itemcontent">
                    <input class="txt" id="vCode" name="vCode" type="text" value="" />
                </div>
                <div class="item">
                    <div class="itemtitle">
                    </div>
                    <div class="itemcontent">
                        <img alt="验证码图片" id="ImgValidateCode" title="看不清？点击换一个"
                             src="/Dishes/ValidateCode" onclick="this.src=this.src+'?'" />
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="itemtitle">
                </div>
                <div class="itemcontent">
                    <button id="btnSubmit" class="btncss">提交投诉</button>
                </div>
            </div>
        </div>
    </form>
</div>

