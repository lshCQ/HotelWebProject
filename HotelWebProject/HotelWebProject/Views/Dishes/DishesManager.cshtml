    $(function () {
        $(".delDishes").click(function () {
            if (!confirm("确定删除吗?")) return;
            var dishesId = $(this).attr("name");
            $.post("/WebHotelManage/Dishes/DeleteDishes", { "dishesId": dishesId }, function (data, status) {
                if (data == "success") {
                    $("#" + dishesId).remove();
                    location.href = "DishesManager";
                }
                else {
                    alert("图片删除失败！");
                }
            });
        });
    });
